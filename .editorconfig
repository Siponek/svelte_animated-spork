[*]
end_of_line = lf
tab_width = 4
indent_size = 4
indent_style = space
charset = utf-8
insert_final_newline = false
trim_trailing_whitespace = true
# Editor configuration, see https://editorconfig.org
root = true

[Makefile]
indent_style = tab

[*.sh]
end_of_line = lf

[*.{js,ts}]
quote_type = single
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2

[*.json]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.css]
indent_size = 4

[*.svelte]
quote_type = single
indent_size = 4
indent_style = space

[*.html]
indent_size = 4
indent_style = tab




